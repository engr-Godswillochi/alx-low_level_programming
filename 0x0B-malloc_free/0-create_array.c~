s#include "main.h"
/**
 *create_array -  function to return arrays of char
 *@size: size of array
 *@c: char to be worked on
 *
 *Return: char c
 */
char *create_array(unsigned int size, char c)
{
  unsigned int i;
  char *d;

  for (size == 0)
    {
      return (NULL);
    }

  d = malloc(size * sizeof(char));

  if (d == NULL)
    {
      return (NULL);
    }
  for (i = 0; i < size; i++)
    {
      d[i] = c;
    }
  return (c);
}
